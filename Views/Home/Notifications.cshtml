@using Newtonsoft.Json
@model IEnumerable<WeatherApp.Models.TempratureData>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Temperature Notifications</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container">
        <h1 class="display-4 text-center">Overheating Notifications</h1>
        <h2>@ViewBag.Message</h2>

        @{
            var maxTemperature = Model.Any() ? Model.Max(record => record.Temperature) : (double?)null;
            string maintenanceMessage = null;
            string alertClass = "alert-primary"; // Default blue color for general prediction

            if (maxTemperature.HasValue)
            {
                if (maxTemperature > 140)
                {
                    maintenanceMessage = "There could be an overheating problem in 3 days. Please check and maintain your engine.";
                }
                else if (maxTemperature > 130)
                {
                    maintenanceMessage = "There could be an overheating problem in 5 days. Please check and maintain your engine.";
                }
                else if (maxTemperature > 120)
                {
                    maintenanceMessage = "There could be an overheating problem in 8 days. Please check and maintain your engine.";
                }
            }
        }

        @if (maxTemperature.HasValue && maxTemperature > 120)
        {
            <div class="alert alert-danger" role="alert">
                <strong>Important:</strong> There are sensitive temperature records which require your attention.
            </div>
        }
        else
        {
            <div class="alert alert-success" role="alert">
                No issues detected based on the filtered data.
            </div>
        }

        @if (!string.IsNullOrEmpty(maintenanceMessage))
        {
            <div class="alert @alertClass" role="alert">
                <strong>Note:</strong> @maintenanceMessage
            </div>
        }

        @if (Model.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Creation Time</th>
                        <th>Temperature</th>
                        <th>Info</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model)
                    {
                        <tr>
                            <td>
                                @{
                                    var formattedDate = record.CreationTime.HasValue

                                    ? record.CreationTime.Value.AddHours(2).ToString("yyyy/MM/dd, HH:mm:ss")

                                    : "Date not available";
                                }

                                @formattedDate
                            </td>

                            <td>@record.Temperature</td>
                            <td>@record.Info</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info" role="alert">
                No temperature records available.
            </div>
        }
    </div>

    <!-- Audio element for notification sound -->
    <audio id="alertSound" src="~/sounds/alert.mp3" preload="auto"></audio>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            var temperatureData = @Html.Raw(JsonConvert.SerializeObject(Model));
            console.log(temperatureData);

            // Check if any of the filtered data requires maintenance
            var maintenanceRequired = temperatureData.some(record => record.Temperature > 120);

            // Play sound only if maintenance is required
            if (maintenanceRequired) {
                var sound = document.getElementById('alertSound');
                sound.play();
            }
        });
    </script>
</body>
</html>
